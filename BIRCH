install.packages("/path/to/birch_package.tar.gz", repos = NULL, type = "source")
library(birch)

# Assuming your dataset is already imported and stored in a variable named 'segmentation_data'

# Assuming 'age' and 'annual_income' are the features for clustering
# Extract the relevant columns
data_for_clustering <- segmentation_data[, c("Age", "Income")]

# Perform clustering using BIRCH
birch_result <- birch(data_for_clustering)

# Extract cluster labels
cluster_labels <- birch_result$cluster

# Add cluster labels to the original dataset
segmentation_data$cluster <- factor(cluster_labels)

# Summary of clusters
summary(cluster_labels)

# Perform hierarchical clustering using the 'hclust' function
hclust_result <- hclust(dist(data_for_clustering))

# Plot dendrogram
plot(hclust_result, main = "Dendrogram of Hierarchical Clustering")

# Cut the dendrogram to get a certain number of clusters (e.g., k = 3)
num_clusters <- 3
cut_tree <- cutree(hclust_result, k = num_clusters)

# Add cluster labels to the original dataset
segmentation_data$cluster <- factor(cut_tree)

# Summary of clusters
summary(cut_tree)


